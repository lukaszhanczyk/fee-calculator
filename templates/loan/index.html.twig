{% extends 'base.html.twig' %}

{% block title %}Hello LoanController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Loans</h3>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Amount</th>
            <th>Term</th>
            <th>Fee</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

    {% for loan in loans %}
        <tr>
            <td>{{ loan.id|e }}</td>
            <td>{{ loan.amount|e }}</td>
            <td>{{ loan.term|e }}</td>
            <td>{{ loan.fee|e }}</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
